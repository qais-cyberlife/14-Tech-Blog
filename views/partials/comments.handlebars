<div class="comments">
  {{#each comments}}
  <div class="card section">
    <section class="comment">
      <div class="meta">
        <b>{{user.username}}</b> on {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>

  </div>
  {{/each}}
</div>